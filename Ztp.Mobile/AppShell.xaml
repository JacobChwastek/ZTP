<?xml version="1.0" encoding="UTF-8"?>

<Shell
    x:Class="Ztp.Mobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Ztp.Mobile"
    xmlns:views="clr-namespace:Ztp.Mobile.Views"
    FlyoutBehavior="Disabled"
    Title="Ztp.Mobile">

    <ShellContent Title="Home" ContentTemplate="{DataTemplate local:MainPage}" Route="MainPage" />
    <ShellContent Route="ProductListView" ContentTemplate="{DataTemplate views:ProductListView}" />
    <ShellContent Route="ProductDetailView" ContentTemplate="{DataTemplate views:ProductDetailsView}" />
    <ShellContent Route="ProductAddView" ContentTemplate="{DataTemplate views:ProductAddView}" />
</Shell>